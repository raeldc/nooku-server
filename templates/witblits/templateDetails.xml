<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="template" method="upgrade">
	<name>Witblits</name>
	<creationDate>16 December 2010</creationDate>
	<author>Prothemer</author>
	<copyright>GNU/GPL</copyright>
	<authorEmail>noreply@prothemer.com</authorEmail>
	<authorUrl>htp://www.prothemer.com</authorUrl>
	<version>0.7.0</version>
	<description>
		<![CDATA[
			<div id="templateWrap">
			<h2>Witblits - White Lightning</h2>
			<p>Witblits is a free gpl template, that can be used as your blank canvas for your site.</p>
			</div>
		]]>
    </description>	
	<files>
		<folder>admin</folder>  
		<folder>lib</folder>  
		<folder>includes</folder>  
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<folder>html</folder>  
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>params.ini</filename>
		<filename>template_thumbnail.png</filename>		
		<filename>templateDetails.xml</filename>
	</files>
	<languages folder="language/en-GB/">
		<language tag="en-GB">en-GB.tpl_witblits.ini</language>
	</languages>
	<administration>
		<languages folder="admin/language/en-GB/">
			<language tag="en-GB">en-GB.tpl_witblits.ini</language>
		</languages>
	</administration>
	<params addpath="/templates/witblits/admin/elements">
		<param type="colorpicker" name="Color Picker Param" default="" />
		<param type="spacer" name="Spacer Param" default="" />
		<param type="loader" name="CSS and JS Loader Param" default="" />
		<param type="toggler" name="Options Toggler" default="" />
	</params>
	<positions>		
		<position>banner</position>
		<position>breadcrumb</position>
		<position>toolbar</position>		
		<position>branding</position>
		<position>top</position>
		<position>header</position>
		<position>topshelf</position>
		<position>bottomshelf</position>	
		<position>inset1</position>
		<position>inset2</position>
		<position>inset3</position>
		<position>inset4</position>
		<position>user1</position>
		<position>user2</position>
		<position>user3</position>
		<position>user4</position>
		<position>user5</position>
		<position>user6</position>
		<position>user7</position>
		<position>user8</position>
		<position>left</position>
		<position>right</position>
		<position>advert1</position>
		<position>advert2</position>
		<position>footerlinks</position>
		<positions>debug</positions>
	</positions>
	<params>
		<param type="spacer" default="TPL_WITBLITS_GROUP_LAYOUT" />
		<param name="wb_grid_columns" type="radio" default="16" label="TPL_WITBLITS_LABEL_NUMBER_OF_COLUMNS" description="TPL_WITBLITS_DESCRIPTION_GRID_COLUMNS">
			<option value="12">12</option>
			<option value="16">16</option>
			<option value="24">24</option>
		</param>
		<param name="@toggler" type="toggler" param="wb_grid_columns" value="12" />
			<param name="wb_sidebar_width_12" type="list" default="4" label="TPL_WITBLITS_LABEL_SIDEBAR_WIDTH_12" description="TPL_WITBLITS_DESCRIPTION_SIDEBAR_WIDTH_12">
				<option value="3">140px</option>
				<option value="4">220px</option>
				<option value="5">300px</option>
				<option value="6">380px</option>
				<option value="7">460px</option>
			</param>
		<param name="@toggler" type="toggler" />
		
		<param name="@toggler" type="toggler" param="wb_grid_columns" value="16" />
			<param name="wb_sidebar_width_16" type="list" default="4" label="TPL_WITBLITS_LABEL_SIDEBAR_WIDTH_16" description="TPL_WITBLITS_DESCRIPTION_SIDEBAR_WIDTH_16">
				<option value="3">160px</option>
				<option value="4">220px</option>
				<option value="5">280px</option>
				<option value="6">340px</option>
				<option value="7">400px</option>
				<option value="8">460px</option>
			</param>
		<param name="@toggler" type="toggler" />
		
		<param name="@toggler" type="toggler" param="wb_grid_columns" value="24" />
			<param name="wb_sidebar_width_24" type="list" default="4" label="TPL_WITBLITS_LABEL_SIDEBAR_WIDTH_24" description="TPL_WITBLITS_DESCRIPTION_SIDEBAR_WIDTH_24">
				<option value="4">150px</option>
				<option value="5">190px</option>
				<option value="6">230px</option>
				<option value="7">270px</option>
				<option value="8">310px</option>
				<option value="9">350px</option>
				<option value="10">390px</option>
				<option value="11">430px</option>
				<option value="12">470px</option>
			</param>
		<param name="@toggler" type="toggler" />
		
		<param name="wb_sidebar_position" type="radio" default="left" label="TPL_WITBLITS_LABEL_SIDEBAR_POSITION" description="TPL_WITBLITS_DESCRIPTION_SIDEBAR_POSITION">
			<option value="left">TPL_WITBLITS_VALUE_LEFT</option>
			<option value="right">TPL_WITBLITS_VALUE_RIGHT</option>
		</param>
		<param name="wb_gridbg" type="radio" default="0" label="TPL_WITBLITS_LABEL_GRID_BG" description="TPL_WITBLITS_DESCRIPTION_GRID_BG">
			<option value="0">TPL_WITBLITS_VALUE_NO</option>
			<option value="1">TPL_WITBLITS_VALUE_YES</option>
		</param>
		<param name="wb_blockwraps" type="radio" default="0" label="TPL_WITBLITS_LABEL_BLOCK_WRAPS" description="TPL_WITBLITS_DESCRIPTION_BLOCK_WRAPS">
			<option value="0">TPL_WITBLITS_VALUE_NO</option>
			<option value="1">TPL_WITBLITS_VALUE_YES</option>
		</param>
		<param name="wb_breadcrumbs_position" type="list" default="2" label="TPL_WITBLITS_LABEL_BREADCRUMBS_POSITION" description="TPL_WITBLITS_DESCRIPTION_BREADCRUMBS_POSITION">
			<option value="0">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_0</option>
			<option value="1">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_1</option>
			<option value="2">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_2</option>
			<option value="3">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_3</option>
			<option value="4">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_4</option>
			<option value="5">TPL_WITBLITS_VALUE_BREADCRUMBS_POSITION_5</option>
		</param>
		<param name="wb_show_date" type="radio" default="0" label="TPL_WITBLITS_LABEL_SHOW_DATE" description="TPL_WITBLITS_DESCRIPTION_SHOW_DATE">
			<option value="0">TPL_WITBLITS_VALUE_NO</option>
			<option value="1">TPL_WITBLITS_VALUE_YES</option>
		</param>
		<param name="wb_skipto" type="radio" default="0" label="TPL_WITBLITS_LABEL_SHOW_SKIPTO" description="TPL_WITBLITS_DESCRIPTION_SHOW_SKIPTO">
			<option value="0">TPL_WITBLITS_VALUE_NO</option>
			<option value="1">TPL_WITBLITS_VALUE_YES</option>
		</param>
		<param name="wb_equalize" type="radio" default="0" label="TPL_WITBLITS_LABEL_EQUALIZE_COLUMNS" description="TPL_WITBLITS_DESCRIPTION_EQUALIZE_COLUMNS">
			<option value="0">TPL_WITBLITS_VALUE_NO</option>
			<option value="1">TPL_WITBLITS_VALUE_YES</option>
		</param>
		<param name="wb_googlefonts" default="1" type="radio" label="Enable Google Fonts" tooltip="inline" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@toggler" type="toggler" param="wb_googlefonts" value="1" />
			<param name="wb_heading_font" default="" type="list" label="H1 Font" tooltip="inline" description="">
				<option value="Cantarell">Cantarell</option>
				<option value="Cardo">Cardo</option>
				<option value="Crimson Text">Crimson Text</option>
				<option value="Droid Sans">Droid Sans</option>
				<option value="Droid Sans Mono">Droid Sans Mono</option>
				<option value="Droid Serif">Droid Serif</option>
				<option value="IM Fell DW Pica">IM Fell DW Pica</option>
				<option value="IM Fell DW Pica SC">IM Fell DW Pica SC</option>
				<option value="IM Fell Double Pica">IM Fell Double Pica</option>
				<option value="IM Fell Double Pica SC">IM Fell Double Pica SC</option>
				<option value="IM Fell English">IM Fell English</option>
				<option value="IM Fell English SC">IM Fell English SC</option>
				<option value="IM Fell French Canon">IM Fell French Canon</option>
				<option value="IM Fell French Canon SC">IM Fell French Canon SC</option>
				<option value="IM Fell Great Primer">IM Fell Great Primer</option>
				<option value="IM Fell Great Primer SC">IM Fell Great Primer SC</option>
				<option value="Inconsolata">Inconsolata</option>
				<option value="Josefin Sans Std Light">Josefin Sans Std Light</option>
				<option value="Lobster">Lobster</option>
				<option value="Molengo">Molengo</option>
				<option value="Nobile">Nobile</option>
				<option value="OFL Sorts Mill Goudy TT">OFL Sorts Mill Goudy TT</option>
				<option value="Old Standard TT">Old Standard TT</option>
				<option value="Reenie Beanie">Reenie Beanie</option>
				<option value="Tangerine">Tangerine</option>
				<option value="Vollkorn">Vollkorn</option>
				<option value="Yanone Kaffeesatz">Yanone Kaffeesatz</option>
			</param>
		<param name="@toggler" type="toggler" />
		
		<param type="spacer" default="" />
		<param type="spacer" default="TPL_WITBLITS_GROUP_BRANDING" />
		<param name="wb_logo_type" type="radio" default="text" label="TPL_WITBLITS_LABEL_LOGO_TYPE" description="TPL_WITBLITS_DESCRIPTION_LOGO_TYPE">
			<option value="image">TPL_WITBLITS_VALUE_IMAGE</option>
			<option value="text">TPL_WITBLITS_VALUE_TEXT</option>
			<option value="module">TPL_WITBLITS_VALUE_MODULE</option>
		</param>
		
		<param name="@toggler" type="toggler" param="wb_logo_type" value="image" />
			<param name="wb_logo_image" type="filelist" default="" size="50" label="TPL_WITBLITS_LABEL_LOGO_IMAGE" directory="templates/witblits/images/logos" exclude="\.html" hide_default="yes" description="TPL_WITBLITS_DESCRIPTION_LOGO_IMAGE" />
		<param name="@toggler" type="toggler" />
		
		<param name="wb_logo_text" type="text" default="Witblits" size="50" label="TPL_WITBLITS_LABEL_LOGO_TEXT" description="TPL_WITBLITS_DESCRIPTION_LOGO_TEXT" />
		<param name="wb_logo_link_title" type="text" default="" size="50" label="TPL_WITBLITS_LABEL_LOGO_LINK_TITLE" description="TPL_WITBLITS_DESCRIPTION_LOGO_LINK_TITLE" />
		<param name="wb_tagline" type="text" default="" size="50" label="TPL_WITBLITS_LABEL_TAGLINE" description="TPL_WITBLITS_DESCRIPTION_TAGLINE" />
		<param name="wb_header_image" type="filelist" default="" size="50" label="TPL_WITBLITS_LABEL_HEADER_IMAGE" directory="templates/witblits/images/headers" exclude="\.html" hide_default="yes" description="TPL_WITBLITS_DESCRIPTION_HEADER_IMAGE" />
		
		<param type="spacer" default="" />
		<param type="spacer" default="TPL_WITBLITS_GROUP_MENU" />				
		<param name="wb_menu_position" type="list" default="2" label="TPL_WITBLITS_LABEL_MENU_POSITION" description="TPL_WITBLITS_DESCRIPTION_MENU_POSITION">
			<option value="0">TPL_WITBLITS_VALUE_MENU_POSITION_0</option>
			<option value="1">TPL_WITBLITS_VALUE_MENU_POSITION_1</option>
			<option value="2">TPL_WITBLITS_VALUE_MENU_POSITION_2</option>
		</param>
		
		<param type="spacer" default="" />
		<param type="spacer" default="TPL_WITBLITS_GROUP_COLORS" />
		<param name="wb_color_background" type="colorpicker" default="#F5F5F5" size="50" label="TPL_WITBLITS_LABEL_BACKGROUND_COLOR" description="TPL_WITBLITS_DESCRIPTION_BACKGROUND_COLOR" />
		<param name="wb_color_foreground" type="colorpicker" default="#F5F5F5" size="50" label="TPL_WITBLITS_LABEL_FOREGROUND_COLOR" description="TPL_WITBLITS_DESCRIPTION_FOREGROUND_COLOR" />
		<param name="wb_color_h1" type="colorpicker" default="#222" size="50" label="TPL_WITBLITS_LABEL_H1_COLOR" description="TPL_WITBLITS_DESCRIPTION_H1_COLOR" />
		<param name="wb_color_h2" type="colorpicker" default="#666" size="50" label="TPL_WITBLITS_LABEL_H2_COLOR" description="TPL_WITBLITS_DESCRIPTION_H2_COLOR" />
		<param name="wb_color_h3" type="colorpicker" default="#444" size="50" label="TPL_WITBLITS_LABEL_H3_COLOR" description="TPL_WITBLITS_DESCRIPTION_H3_COLOR" />
		<param name="wb_color_h4" type="colorpicker" default="#555" size="50" label="TPL_WITBLITS_LABEL_H4_COLOR" description="TPL_WITBLITS_DESCRIPTION_H4_COLOR" />
		<param name="wb_color_h5" type="colorpicker" default="#666" size="50" label="TPL_WITBLITS_LABEL_H5_COLOR" description="TPL_WITBLITS_DESCRIPTION_H5_COLOR" />
		<param name="wb_color_h6" type="colorpicker" default="#777" size="50" label="TPL_WITBLITS_LABEL_H6_COLOR" description="TPL_WITBLITS_DESCRIPTION_H6_COLOR" />
		<param name="wb_color_text" type="colorpicker" default="#444" size="50" label="TPL_WITBLITS_LABEL_BODY_TEXT_COLOR" description="TPL_WITBLITS_DESCRIPTION_TEXT_COLOR" />
		<param name="wb_color_links" type="colorpicker" default="#555" size="50" label="TPL_WITBLITS_LABEL_LINKS_COLOR" description="TPL_WITBLITS_DESCRIPTION_LINKS_COLOR" />
		<param name="wb_color_links_hover" type="colorpicker" default="#999" size="50" label="TPL_WITBLITS_LABEL_LINKS_HOVER_COLOR" description="TPL_WITBLITS_DESCRIPTION_LINKS_HOVER_COLOR" />
		
		<param type="spacer" default="" />
		<param type="spacer" default="TPL_WITBLITS_GROUP_PERFORMANCE" />
		<param name="wb_mode" type="radio" default="0" label="TPL_WITBLITS_LABEL_CURRENT_MODE" description="TPL_WITBLITS_DESCRIPTION_MODE">
			<option value="0">Development</option>
			<option value="1">Production</option>
		</param>

		<param name="@toggler" type="toggler" param="wb_mode" value="1" />	
			<param name="wb_gzip" type="radio" default="1" label="TPL_WITBLITS_LABEL_GZIP" description="TPL_WITBLITS_DESCRIPTION_GZIP">
				<option value="1">TPL_WITBLITS_VALUE_YES</option>
				<option value="0">TPL_WITBLITS_VALUE_NO</option>
			</param>
			<param name="wb_css_packing" type="radio" default="1" label="TPL_WITBLITS_LABEL_CONCATENATE_CSS" description="TPL_WITBLITS_DESCRIPTION_CONCATENATE_CSS">
				<option value="1">TPL_WITBLITS_VALUE_YES</option>
				<option value="0">TPL_WITBLITS_VALUE_NO</option>
			</param>
			<param name="wb_js_packing" type="radio" default="1" label="TPL_WITBLITS_LABEL_CONCATENATE_JS" description="TPL_WITBLITS_DESCRIPTION_CONCATENATE_JS">
				<option value="1">TPL_WITBLITS_VALUE_YES</option>
				<option value="0">TPL_WITBLITS_VALUE_NO</option>
			</param>
		<param name="@toggler" type="toggler" />
		
		<param type="loader" default="" />
	</params>			
</install>